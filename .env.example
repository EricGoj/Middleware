# Environment variables for Middleware Application
# Copy this file to .env and update with your actual values

# JIRA Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@domain.com
JIRA_API_TOKEN=your-api-token

# Database Configuration (Optional - uses defaults if not set)
POSTGRES_DB=middleware_db
POSTGRES_USER=middleware_user
POSTGRES_PASSWORD=middleware_password

# Application Configuration
SPRING_PROFILES_ACTIVE=docker
REACT_APP_API_BASE_URL=http://localhost:8080/api

# Optional: pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@middleware.com
PGADMIN_DEFAULT_PASSWORD=admin123